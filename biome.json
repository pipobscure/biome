{
	"$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 240,
		"lineEnding": "lf"
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"complexity": {
				"noExtraBooleanCast": "off",
				"noExcessiveNestedTestSuites": "off",
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noUselessCatch": "off",
				"noUselessConstructor": "off",
				"noUselessLabel": "off",
				"noUselessLoneBlockStatements": "off",
				"useArrowFunction": "off",
				"useLiteralKeys": "off",
				"useSimpleNumberKeys": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noRestrictedImports": {
					"level": "warn",
					"options": {
						"paths": {
							"assert": "Prefer 'node:assert/strict'",
							"node:assert": "Prefer 'node:assert/strict'"
						}
					}
				}
			}
		}
	}
}
